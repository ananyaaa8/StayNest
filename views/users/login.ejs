<% layout("./layouts/boilerplate") %>
    <div class="row mt-3 container d-flex flex-column min-vh-100">
        <h1 class="col-6 offset-3">Login on WanderLust</h1>
        <div class="col-6 offset-3 container">
            <form action="/login" method="POST" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label" id="username">Username</label>
                    <input type="text" name="username" id="username" class="form-control" required>   
                </div>

        
                <div class="mb-3">
                    <label for="password" class="form-label" id="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>

                <button class="btn btn-success">Login</button>
            </form>
        </div>
    </div>


   
    